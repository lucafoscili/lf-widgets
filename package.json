{
  "name": "@lf-widgets/root",
  "description": "LF Widgets - Root",
  "author": {
    "name": "Luca Foscili",
    "url": "https://www.lucafoscili.com"
  },
  "private": true,
  "version": "0.0.0",
  "license": "Apache-2.0",
  "repository": "https://github.com/lucafoscili/lf-widgets",
  "devDependencies": {
    "@lf-widgets/components": "workspaces:*",
    "@lf-widgets/core": "workspaces:*",
    "@lf-widgets/foundations": "workspaces:*",
    "@lf-widgets/showcase": "workspaces:*",
    "@stencil/core": "^4",
    "@stencil/react-output-target": "^0",
    "@stencil/sass": "^3",
    "@types/eslint": "^9",
    "@types/node": "^22",
    "@types/prismjs": "^1",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "cypress": "^13",
    "echarts": "^5",
    "lerna": "^8",
    "prettier": "^3",
    "prismjs": "^1",
    "puppeteer": "^22.9.0",
    "react": "^18",
    "react-dom": "^18",
    "typescript": "^5"
  },
  "scripts": {
    "build:components": "lerna run build --scope @lf-widgets/components --stream",
    "build:core": "lerna run build --scope @lf-widgets/core --stream",
    "build:foundations": "lerna run build --scope @lf-widgets/foundations --stream",
    "build:react": "lerna run build --scope @lf-widgets/react --stream",
    "build:react-ssr": "lerna run build --scope @lf-widgets/react-ssr --stream",
    "build:showcase": "lerna run build --scope @lf-widgets/showcase --stream",
    "build:showcase-react": "lerna run build --scope @lf-widgets/showcase-react --stream",
    "build": "yarn build:foundations && yarn build:core && yarn build:components && yarn sync:showcase && yarn build:showcase && yarn build:react && yarn build:react-ssr && yarn build:showcase-react && yarn markdown",
    "clean": "lerna run clean --stream && node scripts/clean.js",
    "dev:setup": "yarn build:foundations && yarn build:core && yarn build:components && lerna run dev --scope @lf-widgets/showcase --stream",
    "dev": "lerna run dev --scope @lf-widgets/showcase --stream",
    "doc": "node ./packages/components/src/scripts/doc.js",
    "format": "prettier --write 'packages/components/src/**/*.{ts,tsx,json,scss}'",
    "lerna": "lerna",
    "markdown": "node scripts/spreadReadme.js",
    "mixins": "node ./packages/components/src/scripts/mixins.js",
    "sync:showcase": "yarn doc && yarn mixins",
    "test": "lerna run test --scope @lf-widgets/showcase --stream",
    "test:open": "lerna run test:open --scope @lf-widgets/showcase --stream"
  },
  "workspaces": [
    "packages/components",
    "packages/core",
    "packages/foundations",
    "packages/hydrate",
    "packages/react",
    "packages/react-ssr",
    "packages/showcase",
    "packages/showcase-react"
  ],
  "packageManager": "yarn@4.6.0"
}
