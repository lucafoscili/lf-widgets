{
  "name": "@lf-widgets/root",
  "description": "LF Widgets - Root package",
  "author": {
    "name": "Luca Foscili",
    "url": "https://www.lucafoscili.com"
  },
  "private": true,
  "version": "0.0.0",
  "license": "Apache-2.0",
  "repository": "https://github.com/lucafoscili/lf-widgets",
  "devDependencies": {
    "@lf-widgets/core": "workspace:*",
    "@lf-widgets/foundations": "workspace:*",
    "@lf-widgets/framework": "workspace:*",
    "@lf-widgets/showcase": "workspace:*",
    "@stencil/core": "^4",
    "@stencil/react-output-target": "^0",
    "@stencil/sass": "^3",
    "@types/eslint": "^9",
    "@types/jest": "^29",
    "@types/markdown-it": "^14",
    "@types/node": "^22",
    "@types/prismjs": "^1",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "cross-env": "^7.0.3",
    "css": "^3.0.0",
    "cypress": "^14",
    "echarts": "^5",
    "jest": "^29",
    "jest-cli": "^29",
    "jest-environment-jsdom": "^30.2.0",
    "jest-environment-node": "^30.2.0",
    "lerna": "^8",
    "markdown-it": "^14",
    "prettier": "^3",
    "prismjs": "^1",
    "puppeteer": "^24",
    "react": "^19",
    "react-dom": "^19",
    "sass": "^1.81.0",
    "typescript": "^5",
    "vite": "^6",
    "vite-plugin-static-copy": "^2"
  },
  "scripts": {
    "prebuild": "yarn lint:scss-modules",
    "build:core": "lerna run build --scope @lf-widgets/core --stream",
    "build:foundations": "lerna run build --scope @lf-widgets/foundations --stream",
    "build:framework": "lerna run build --scope @lf-widgets/framework --stream",
    "build:react-core": "lerna run build --scope @lf-widgets/react-core --stream",
    "build:react-showcase": "lerna run build --scope @lf-widgets/react-showcase --stream",
    "build:showcase": "lerna run build --scope @lf-widgets/showcase --stream",
    "build:assets:sprite": "lerna run generate:sprite --scope @lf-widgets/assets --stream",
    "build": "yarn build:assets:sprite && yarn build:foundations && yarn build:framework && yarn build:core && yarn sync:showcase && yarn build:showcase && yarn build:react-core && yarn build:react-showcase && yarn markdown",
    "clean": "lerna run clean --stream && node scripts/clean.js",
    "dev:setup": "cross-env NODE_ENV=development yarn build:foundations && cross-env NODE_ENV=development yarn build:framework && cross-env NODE_ENV=development yarn build:core && lerna run dev --scope @lf-widgets/showcase --stream",
    "dev": "lerna run dev --scope @lf-widgets/showcase --stream",
    "doc": "node ./packages/core/src/scripts/doc.js",
    "format": "prettier --write 'packages/core/src/**/*.{ts,tsx,json,scss}'",
    "generate:global-styles": "node packages/core/src/scripts/generate-global-styles.js",
    "lerna": "lerna",
    "markdown": "node scripts/copyReadme.js",
    "mixins": "node ./packages/core/src/scripts/copyMixins.js",
    "sync:showcase": "yarn doc && yarn mixins",
    "test": "lerna run test --scope @lf-widgets/showcase --stream",
    "test:unit": "lerna run test --scope @lf-widgets/core --stream",
    "test:unit:watch": "lerna run test:watch --scope @lf-widgets/core --stream",
    "test:open": "lerna run test:open --scope @lf-widgets/showcase --stream",
    "lint:scss-modules": "node scripts/checkNoScssImports.js"
  },
  "workspaces": [
    "packages/assets",
    "packages/core",
    "packages/foundations",
    "packages/framework",
    "packages/react-core",
    "packages/react-showcase",
    "packages/showcase"
  ],
  "packageManager": "yarn@4.6.0"
}
