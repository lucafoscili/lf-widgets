{
  "name": "@lf-widgets/components",
  "description": "LF Widgets - Web components library",
  "author": {
    "name": "Luca Foscili",
    "url": "https://www.lucafoscili.com"
  },
  "version": "0.0.1-rc.1",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "chat",
    "custom elements",
    "lf widgets",
    "lf nodes",
    "llm",
    "monorepo",
    "scss",
    "stenciljs",
    "theming",
    "typescript",
    "webcomponents"
  ],
  "main": "./dist/index.cjs.js",
  "module": "dist/index.js",
  "es2015": "dist/esm/lfw.js",
  "es2017": "dist/esm/lfw.js",
  "types": "dist/types/components.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "dependencies": {
    "echarts": "^5",
    "prismjs": "^1"
  },
  "peerDependencies": {
    "@lf-widgets/core": "^0",
    "@lf-widgets/foundations": "^0"
  },
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "yarn clean && npx stencil build --docs && yarn hydrate",
    "clean": "node -e \"require('fs').rmSync('./dist', { recursive: true, force: true })\"",
    "doc": "npx stencil doc",
    "hydrate": "node ./src/scripts/hydrate.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lucafoscili/lf-widgets.git"
  },
  "installConfig": {
    "hoistingLimits": "workspaces"
  },
  "license": "Apache-2.0"
}
