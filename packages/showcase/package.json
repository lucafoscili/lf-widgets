{
  "name": "@lf-widgets/showcase",
  "description": "LF Widgets - Showcase component and documentation",
  "author": {
    "name": "Luca Foscili",
    "url": "https://www.lucafoscili.com"
  },
  "version": "0.1.0",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "custom elements",
    "lf widgets",
    "showcase",
    "lf nodes",
    "llm",
    "monorepo",
    "scss",
    "stenciljs",
    "theming",
    "typescript",
    "webcomponents"
  ],
  "main": "./dist/index.cjs.js",
  "module": "dist/index.js",
  "es2015": "dist/esm/index.js",
  "es2017": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "peerDependencies": {
    "@lf-widgets/core": "workspace:*",
    "@lf-widgets/foundations": "workspace:*",
    "@lf-widgets/framework": "workspace:*"
  },
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "yarn clean && yarn copy && npx stencil build --docs",
    "clean": "node ./src/scripts/clean.js",
    "copy": "node ./src/scripts/copyAssets.js",
    "dev": "yarn copy && npx stencil build --dev --watch --serve",
    "doc": "npx stencil doc",
    "test": "npx cypress run",
    "test:open": "npx cypress open"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lucafoscili/lf-widgets.git"
  },
  "installConfig": {
    "hoistingLimits": "workspaces"
  },
  "license": "Apache-2.0"
}
